#:kivy 1.11.1
#:import exists os.path.exists

<Label>
    font_name:'droid.ttf'

<BackgroundColor@Widget>
    background_color: 0, 0, 0, 0.5
    canvas.after:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ScreenManager>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source:'bkg.jpg'
        Color:
            rgba:0.1,0,0,0.7
        Rectangle:
            size: self.size
            pos: self.pos

<Widget>
    background_color: 0, 0, 0, 0.5

<Image>
    source:'img_missing.jpg'

<Popup_message@Label>
    padding:5,5
    disabled: False
    font_size:12
    size_hint_y:0.04
    canvas.before:
        Color:
            rgba:0.2,0.2,0.2,self.bg_alhpa
        RoundedRectangle:
            size:self.size
            pos: self.pos
            radius: [5,]


<Item_Container@BoxLayout>
    lable_img:img
    lable_txt:item_button
    orientation:'horizontal'
    Image:
        id:img
        size_hint_x:0.3
        size_hint_y:1
        allow_stretch:True
    Button:
        id:item_button
        size_hint_x:0.7
        size_hint_y:1
        valign:'top'
        text:root.lable_title
        text_size: self.size[0]-10,self.size[1]-10
        font_size:self.height/5
        on_release: root.parent_screen.onNextScreen(root.page_path)

<Txt_Img@BoxLayout>
    spacing:10
    padding:0
    orientation:'horizontal'
    Image:
        id:img
        size_hint_x:0.3
        allow_stretch:True
    Label:
        id:item_button
        size_hint_x:0.7
        markup:True

<Page_label@Label>
    markup:True
    padding:0,10
    pos_hint_x:'center'
    text_size:self.size[0],None

<Page@PageLayout>

<Page_container@BoxLayout>
    canvas.before:
        Color:
            rgba:0.2,0.1,0.6,0
        Rectangle:
            size: self.size
            pos: self.pos






<ScreenOne>:
    name: "screen1"
    ScrollView:
        do_scroll_y: True
        Items_Layout:
            parent_screen:root
            cols: 1
            height: self.minimum_height
            spacing:0
            padding:5


<ScreenTwo>:
    messager1:messager1
    messager2:messager2
    page:page
    move_l:move_l
    move_r:move_r
    FloatLayout:
        padding:0
        spacing:0
        size_hint_x:1
        size_hint_y:1
        FloatLayout:
            size_hint_y:0.95
            pos_hint:{'x':0,'y':0.05}
            Page:
                pos_hint:{'x':0.2,'y':0}
                size_hint_x:0.6
                size_hint_y:1
                id:page
            BoxLayout:
                id:move_l
                pos:self.parent.pos
                size_hint_x:0.5
                size_hint_y:1
                canvas.before:
                    Color:
                        rgba: 1,1,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source:'move.jpg'
                        tex_coords: 0, 1, 0.5, 1, 0.5, 0.5, 0, 0.5
            BoxLayout:
                id:move_r
                pos:self.parent.size[0]/2,self.parent.pos[1]
                size_hint_x:0.5
                size_hint_y:1
                canvas.before:
                    Color:
                        rgba: 1,1,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source:'move.jpg'
                        tex_coords:  0.5, 1, 1, 1, 1, 0.5, 0.5, 0.5

        AnchorLayout:
            anchor_y:'bottom'
            anchor_x:'center'
            FloatLayout:
                size_hint_y:0.05
                Popup_message:
                    size_hint_x:0.9
                    size_hint_y:1
                    id:messager1
                    halign:'center'

                ActionBar:
                    size_hint_x:1
                    size_hint_y:1
                    ActionView:
                        ActionPrevious:
                            with_previous: True
                            on_release: root.onBackBtn()
                Popup_message:
                    bg_alhpa:1
                    text_size:self.size
                    pos_hint:{'x':0.9,'y':0}
                    size_hint_x:0.1
                    size_hint_y:1
                    opacity :1
                    id:messager2
                    halign:'right'
                    text:"{0}/{1}".format(55,root.page_count)


<Manager>:
    id: screen_manager
    screen_one: screen_one
    screen_two: screen_two

    ScreenOne:
        id: screen_one
        name: 'screen1'
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: 'screen2'
        manager: screen_manager
